{
    "scripts": {
        "start": {
            "cmd": "deno run --allow-env --allow-net --allow-read --allow-plugin --allow-write src/main.ts",
            "watch": "true"
        }
    },
    "watcher": {
        "exts": ["js", "jsx", "ts", "tsx", "json"],
        "match": ["**/*.*"],
        "skip": ["Dockerfile"]
    }
}